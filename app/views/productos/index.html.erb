<p style="color: green"><%= notice %></p>
<%= link_to "New producto", new_producto_path %>

<h1>Productos</h1>

<!-- app/views/home/index.html.erb -->
<div class="row">
    <div class="col-md-8 offset-2">
        <div class="container">
            <div class="row">
                <% @productos.each do |producto| %>
                    <div class="col-md-3">
                        <div class="card">
                            <img class="card-img-top" src="https://dummyimage.com/600x400/c7c7c7/737373&text=image" alt="<%=producto.nombre%>" />
                            <div class="card-block">
                                <h5 class="card-title">
                                    <%= producto.nombre %>
                                </h5>
                                <div class="card-text">
                                    <div class="badge badge-primary">
                                        <%= producto.categorias.first.nombre %>
                                    </div>
                                    <div>$<%= producto.precio %>
                                    </div>
                                </div>
                                <div class="row float-right">
                                    <div class="col-md-12">
                                        <button class="btn btn-primary btn-sm">
                                            Add to cart</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
